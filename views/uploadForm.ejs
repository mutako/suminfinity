<%- include('partials/header') %>

    <h1>Upload New Product</h1>

    <form action="/upload" method="POST" enctype="multipart/form-data">
        <label>Type: <input type="text" name="type" required></label><br>
        <label>Size: <input type="text" name="size" required></label><br>
        <label>Color: <input type="text" name="color" required></label><br>
        <label>Serial: <input type="text" name="serial"></label><br>
        <label>Product Number: <input type="text" name="product_number"></label><br>
        <label>Name: <input type="text" name="name" required></label><br>
        <label>Price: <input type="number" step="0.01" name="price" required></label><br>
        <label>Image: <input type="file" name="image"></label><br>
        <button type="submit">Upload Product</button>
    </form>

    <p><a href="/upload-products">Upload CSV/XLSX instead</a></p>

    <%- include('partials/footer') %>