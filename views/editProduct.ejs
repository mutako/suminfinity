<%- include('partials/header') %>

    <h1>Edit Product</h1>

    <form method="POST" action="/products/edit/<%= product.id %>" enctype="multipart/form-data">
        <label for="type">Type:</label>
        <input type="text" id="type" name="type" value="<%= product.type %>" placeholder="Type" required />

        <label for="size">Size:</label>
        <input type="text" id="size" name="size" value="<%= product.size %>" placeholder="Size" required />

        <label for="color">Color:</label>
        <input type="text" id="color" name="color" value="<%= product.color %>" placeholder="Color" required />

        <label for="serial">Serial (optional):</label>
        <input type="text" id="serial" name="serial" value="<%= product.serial %>" placeholder="Serial (optional)" />

        <label for="product_number">Product Number (optional):</label>
        <input type="text" id="product_number" name="product_number" value="<%= product.product_number %>" placeholder="Product Number (optional)" />

        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" placeholder="Name" required />

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" placeholder="Price" required />

        <label for="image_url">Image URL (optional):</label>
        <input type="text" id="image_url" name="image_url" value="<%= product.image %>" placeholder="Image URL (optional)" />

        <label for="image">Upload Image (optional):</label>
        <input type="file" id="image" name="image" accept="image/*" />

        <button type="submit">Save Changes</button>
    </form>

    <%- include('partials/footer') %>